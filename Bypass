local tcs = game:GetService("TextChatService")
local cl = tcs:WaitForChild("TextChannels"):WaitForChild("RBXGeneral")
local ce = game:GetService("CoreGui")
local txt;
pcall(function()
if ce:FindFirstChild("ExperienceChat") then
txt = ce.ExperienceChat.appLayout.chatInputBar.Background.Container.TextContainer.TextBoxContainer.TextBox
elseif gui:FindFirstChild("Chat") and gui.Chat.Frame:FindFirstChild("ChatBar") then
txt = gui.Chat.Frame.ChatBar.TextBox
else
warn("This game may not work.")
end
end)
local bypass = false
local t;
txt.FocusLost:Connect(function(func)
if func and txt.Text ~= "" then
tcs.OnIncomingMessage = function(a,b)
if a.TextSource.Name == game.Players.LocalPlayer.Name then
if bypass then
bypass = false
return
end
bypass = true
t = a.Text
a.Text = ""
a.TextSource.CanSend = true
cl:SendAsync(tostring(t))
print("done")
tcs.OnIncomingMessage = nil
end
end
end
end)
